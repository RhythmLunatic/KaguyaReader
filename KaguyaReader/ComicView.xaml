        <FlipView
            Tapped="image_Tapped" 
            Grid.Row="0" 
            Grid.RowSpan="3"
            
            ItemsSource="{x:Bind MangaCVS.View}"
            ItemTemplate="{x:Bind flipViewData}"
            x:Name="flipView">
        </FlipView>
        <CommandBar x:Name="BottomBar" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="5" Width="1494">
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal">
                    <!--Maximum="{Binding Count, ElementName=ImageCollection}"-->
                    <Slider Width="500" Value="{Binding SelectedIndex, ElementName=flipView}"  x:Name="Slider"></Slider>
                </StackPanel>
            </CommandBar.Content>
            <AppBarButton Icon="Accept" Label="AppBarButton"/>
            <AppBarButton Icon="Cancel" Label="AppBarButton"/>
        </CommandBar>


    </Grid>
</Page>
